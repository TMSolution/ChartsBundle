<div class="mini-charts-item {{options.backgroundColorClass}}">
    <div class="clearfix">
        <div id="{{options.htmlContainerId}}" data-percent="{{options.value}}" class="easy-pie chart spark-chart-block"></div>
        <div class="count">
            <small class="chart-title">{{options.title|trans}}</small>
            <h2>{{options.value}}%</h2>
        </div>
    </div>
</div>

<script>

    var {{options.htmlContainerId}}Fn = function () {
        if ($('#{{options.htmlContainerId}}')[0]) {

            $('#{{options.htmlContainerId}}').easyPieChart({
                trackColor: '{{options.trackColor}}',
                scaleColor: '{{options.scaleColor}}',
                barColor: '{{options.barColor}}',
                lineWidth: {{options.lineWidth}},
                lineCap: '{{options.lineCap}}',
                size: 45,
                percent: 10
            });


        }
    }
    
    {% if app.request.isXmlHttpRequest() %}
        {{options.htmlContainerId}}Fn();
    {% else %}
    if (collector) {
        collector.addFunction({{options.htmlContainerId}}Fn);
    }
    {% endif %}

</script>

